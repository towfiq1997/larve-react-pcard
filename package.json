{
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "all": "php artisan serve && npm run watch && npm run cssbuild",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "cssbuild": "tailwindcss -i ./resources/css/app.css -o ./public/css/app.css --minify -w",
        "postcss": "postcss -i ./resources/css/app.css -o ./public/css/app.css --minify -w"
    },
    "devDependencies": {
        "@babel/preset-react": "^7.18.6",
        "axios": "^1.3.5",
        "laravel-mix": "^6.0.49",
        "lodash": "^4.17.21",
        "postcss": "^8.4.21",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwindcss": "^3.3.1"
    },
    "dependencies": {
        "@reduxjs/toolkit": "^1.9.3",
        "react-redux": "^8.0.5",
        "react-router-dom": "^6.10.0",
        "redux": "^4.2.1",
        "redux-persist": "^6.0.0",
        "uuid": "^9.0.0"
    }
}
